        <div class="form-group">
            <label for="Variant">Вариант</label>
            <select id="Variant" name="Variant" class="form-control">
                @foreach (var item in Model.TverdVariants)
                {
                    <option value="@item.VarTverd_Toplivo_ID" title="@item.Description">@item.NameVariant_TverdToplivo</option>
                }
            </select>
        </div>
        <div class="container-sm text-center">
            <div class="row row-cols-auto">
                @using (Html.BeginForm("DeleteVariant", "Home", FormMethod.Post))
                {
                    <input type="hidden" name="UserId" value="@Model.UserId">
                    <input type="hidden" id="HiddenVariant1" name="VariantId" value="">
                    <button type="submit" class="btn btn-primary">Удалить</button>
                }
                @using (Html.BeginForm("LoadVariant", "Home", FormMethod.Post))
                {
                    <input type="hidden" name="UserId" value="@Model.UserId">
                    <input type="hidden" id="HiddenVariant2" name="VariantId" value="">
                    <button type="submit" class="btn btn-primary">Загрузить</button>
                }
            </div>
        </div>
        @using (Html.BeginForm("SaveVariant", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <input type="hidden" class="form-control" name="UserId" value="@Model.UserId">
                <input type="hidden" class="form-control" name="TempPitWat" value="@ViewBag.DataInput.TempPitWat">
                <input type="hidden" class="form-control" name="TempHeatWat" value="@ViewBag.DataInput.TempHeatWat">
                <input type="hidden" class="form-control" name="Pressure" value="@ViewBag.DataInput.Pressure">
                <input type="hidden" class="form-control" name="ParVyh" value="@ViewBag.DataInput.ParVyh">
                <input type="hidden" class="form-control" name="RashWat" value="@ViewBag.DataInput.RashWat">
                <input type="hidden" class="form-control" name="TempRabT" value="@ViewBag.DataInput.TempRabT">
                <input type="hidden" class="form-control" name="SodH" value="@ViewBag.DataInput.SodH">
                <input type="hidden" class="form-control" name="SodC" value="@ViewBag.DataInput.SodC">
                <input type="hidden" class="form-control" name="SodO" value="@ViewBag.DataInput.SodO">
                <input type="hidden" class="form-control" name="SodS" value="@ViewBag.DataInput.SodS">
                <input type="hidden" class="form-control" name="SodWP" value="@ViewBag.DataInput.SodWP">
                <input type="hidden" class="form-control" name="Alpha" value="@ViewBag.DataInput.Alpha">
                <input type="hidden" class="form-control" name="TempVozd" value="@ViewBag.DataInput.TempVozd">
                <input type="hidden" class="form-control" name="TempOut" value="@ViewBag.DataInput.TempOut">
                <input type="hidden" class="form-control" name="QChem" value="@ViewBag.DataInput.QChem">
                <input type="hidden" class="form-control" name="QMech" value="@ViewBag.DataInput.QMech">
                <input type="hidden" class="form-control" name="QCold" value="@ViewBag.DataInput.QCold">
            

            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="NameVariant_TverdToplivo" placeholder="Название" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="Description" placeholder="Описание" required>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        }
    }

    @*<a href="@Url.Action("Excel", "Home")">Скачать решение в Excel</a>*@
</body>
</html>